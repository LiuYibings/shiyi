<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="23vp"
        ohos:top_margin="10vp">

        <StackLayout
            ohos:height="match_content"
            ohos:width="match_content">

            <TextField
                ohos:id="$+id:index_search_textfield"
                ohos:height="35vp"
                ohos:width="300vp"
                ohos:background_element="$graphic:background_search_input"
                ohos:hint="请输入您想查找的物品 "
                ohos:left_padding="20px"
                ohos:text_size="15fp"
                ohos:top_margin="5vp"
                ohos:top_padding="8vp">
            </TextField>

            <Text
                ohos:height="25vp"
                ohos:width="1vp"
                ohos:background_element="#FFB8B6B6"
                ohos:left_margin="630px"
                ohos:text="|"
                ohos:top_margin="10px"
                />

            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:search"
                ohos:left_margin="220vp"
                ohos:scale_mode="inside"
                ohos:top_margin="8vp"/>

            <Text
                ohos:height="25vp"
                ohos:width="match_content"
                ohos:left_margin="250vp"
                ohos:text="搜索"
                ohos:text_color="#FF989494"
                ohos:text_size="18fp"
                ohos:top_padding="8vp"
                />
        </StackLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:address_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:button_red"
            ohos:hint="获取定位信息"
            ohos:left_margin="20vp"
            ohos:left_padding="5vp"
            ohos:right_padding="5vp"
            ohos:text_size="15vp"
            ohos:top_margin="10vp"/>

        <Text
            ohos:id="$+id:text_address_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="15vp"
            ohos:multiple_lines="true"
            ohos:text_size="15vp"
            ohos:top_margin="10vp"/>
    </DirectionalLayout>
        <Button
            ohos:id="$+id:address_Button"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:red_button"
            ohos:text="搜索"
            ohos:left_margin="290vp"
            ohos:left_padding="5vp"
            ohos:right_padding="5vp"
            ohos:text_size="20vp"
            ohos:top_margin="10vp"/>

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="30vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp">

                <TableLayout
                    ohos:id="$+id:address_list_table"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:column_count="2"
                    ohos:left_margin="10vp"
                    ohos:top_margin="20vp">
                </TableLayout>
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>
<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
        <Text
        ohos:left_margin="15vp"
        ohos:top_margin="20vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="儿童玩具"
        ohos:text_font="HwChinese-medium"
        ohos:text_size="15fp"/>
        <DirectionalLayout
        ohos:left_margin="20vp"
        ohos:top_margin="20vp"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:width="match_content">
        <DirectionalLayout
            ohos:id="$+id:thing_class52"
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:scale_mode="stretch"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:image_src="$media:a52"/>
            <Text
                ohos:top_margin="5vp"
                ohos:text_size="12vp"
                ohos:left_margin="5vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="自行车"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:thing_class53"
            ohos:left_margin="20vp"
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:scale_mode="stretch"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:image_src="$media:a53"/>

            <Text
                ohos:top_margin="5vp"
                ohos:text_size="12vp"
                ohos:left_margin="5vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="童车"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:thing_class54"
            ohos:left_margin="20vp"
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:scale_mode="stretch"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:image_src="$media:a54"/>

            <Text
                ohos:top_margin="5vp"
                ohos:text_size="12vp"
                ohos:left_margin="18vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="积木"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>
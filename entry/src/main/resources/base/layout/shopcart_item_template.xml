<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="80vp"
    ohos:width="match_parent"
    ohos:top_margin="5vp"
    ohos:orientation="horizontal"
    ohos:background_element="#ffffff"
    ohos:alignment="vertical_center">
    <Checkbox
        ohos:id="$+id:check_box"
        ohos:height="25vp"
        ohos:width="25vp"
        ohos:text_size="20fp"
        ohos:check_element="$graphic:checkbox_check_element"/>
    <Image
        ohos:id="$+id:shopcart_item_image"
        ohos:height="74vp"
        ohos:width="74vp"
        ohos:image_src="$media:index_icon_1"
        ohos:margin="3vp"></Image>
    <Text
        ohos:id="$+id:shopcart_item_product_name_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="10fp"
        ohos:text_alignment="left"
        ohos:text="华为HUAWEIP40-12G+256G冰霜银 鸿蒙系统HarmonyOS"
        ohos:multiple_lines="true"
        ohos:padding="5vp"></Text>
    <Text
        ohos:id="$+id:shopcart_item_product_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:text="￥ 13.80"
        ohos:padding="5vp"></Text>
    <Text
        ohos:id="$+id:shopcart_item_product_num_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:text="2"
        ohos:padding="5vp"></Text>
    <Text
        ohos:id="$+id:shopcart_item_total_price_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:text="￥ 27.60"
        ohos:padding="5vp"></Text>
</DirectionalLayout>
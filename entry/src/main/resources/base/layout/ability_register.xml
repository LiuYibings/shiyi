<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content">
                <Text
            ohos:left_margin="75vp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text="用户注册"
            ohos:text_size="40fp"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:on2"></Image>
    </DirectionalLayout>
    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_line"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:orientation="horizontal"
        ohos:right_margin="20vp"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:top_margin="10vp">


    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:orientation="horizontal"
        ohos:right_margin="20vp"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:top_margin="10vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text="用户名称"
            ohos:text_size="20fp"/>
        <TextField
            ohos:id="$+id:register_name"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:hint="请输入用户名"
            ohos:hint_color="#999999"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:padding="10vp"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            ohos:weight="1"/>

    </DirectionalLayout>
    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_line"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:orientation="horizontal"
        ohos:right_margin="20vp"
        ohos:top_margin="10vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text="设置密码"
            ohos:text_size="20fp"/>

        <TextField
            ohos:id="$+id:register_password"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:hint="密码大于6位，字母"
            ohos:left_margin="10vp"
            ohos:hint_color="#999999"
            ohos:layout_alignment="vertical_center"
            ohos:padding="10vp"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            ohos:weight="1"/>
    </DirectionalLayout>
    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_line"/>
    <Button
        ohos:id="$+id:but_register"
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:shape_btn_login"
        ohos:left_margin="20vp"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text="注 册"
        ohos:text_color="#ffffff"
        ohos:text_size="26fp"
        ohos:top_margin="20vp"/>
    <Text
        ohos:id="$+id:msgtip"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="20vp"
        ohos:text_size="16fp"/>
</DirectionalLayout>
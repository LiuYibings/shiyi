<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:id="$+id:information_tem_id"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal"
        ohos:top_margin="5vp">
        <!--                物品的首页-->
        <Image
            ohos:id="$+id:information_image"
            ohos:height="74vp"
            ohos:width="74vp"
            ohos:image_src="$media:index_icon_1"
            ohos:margin="3vp"
            ohos:scale_mode="stretch"/>

        <DirectionalLayout
            ohos:height="80vp"
            ohos:width="match_content"
            ohos:background_element="#ffffff"
            ohos:orientation="vertical"
            ohos:top_margin="5vp">

            <Text
                ohos:id="$+id:information_user"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:padding="2vp"
                ohos:text="用户名"
                ohos:text_size="15fp">
            </Text>

            <Text
                ohos:id="$+id:information_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="8vp"
                ohos:text="显示最后一行的聊天记录"
                ohos:text_color="#FFC8C3C3"
                ohos:text_size="12fp"
                ohos:top_margin="15vp"
                />
        </DirectionalLayout>

        <Text
            ohos:id="$+id:information_prick"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="30vp"
            ohos:text="赏金"
            ohos:text_color="red"
            ohos:text_size="30fp"
            ohos:top_margin="10vp"
            />
    </DirectionalLayout>
</DirectionalLayout>
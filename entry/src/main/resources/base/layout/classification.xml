<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:orientation="horizontal"
    ohos:width="match_parent">

    <TabList
        ohos:id="$+id:class_tablist"
        ohos:height="match_parent"
        ohos:width="80vp"
        ohos:fixed_mode="true"
        ohos:normal_text_color="#888888"
        ohos:orientation="vertical"
        ohos:padding="10vp"
        ohos:selected_tab_indicator_color="#0aabbc"
        ohos:selected_tab_indicator_height="1vp"
        ohos:selected_text_color="#0aabbc"
        ohos:tab_indicator_type="bottom_line"
        ohos:text_alignment="center"
        ohos:text_size="12vp"
        ></TabList>

    <Image
        ohos:height="870vp"
        ohos:width="match_content"
        ohos:image_src="$media:ver_lineOne"/>
    <PageSlider
        ohos:id="$+id:class_pageSlider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_common"
        ohos:orientation="vertical"></PageSlider>
</DirectionalLayout>
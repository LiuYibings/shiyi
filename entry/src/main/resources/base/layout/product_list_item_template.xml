<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="240vp"
    ohos:width="170vp"
    ohos:background_element="$graphic:back"
    ohos:margin="2vp"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="170vp"
        ohos:width="match_parent">

        <Image
            ohos:id="$+id:product_image"
            ohos:height="170vp"
            ohos:width="170vp"
            ohos:background_element="$graphic:back"
            ohos:image_src="$media:one1"
            ohos:scale_mode="stretch">
        </Image>
    </DirectionalLayout>

    <Text
        ohos:id="$+id:product_name_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="10fp">
    </Text>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Image
            ohos:height="30vp"
            ohos:scale_mode="zoom_center"
            ohos:image_src="$media:jifeng"
            ohos:width="30vp"/>

        <Text
            ohos:id="$+id:product_price_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="2vp"
            ohos:text_color="red"
            ohos:text_size="16fp">
        </Text>
    </DirectionalLayout>

    <Text
        ohos:id="$+id:product_address_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_color="#FFBAB8B8"
        ohos:text_size="12fp">
    </Text>
</DirectionalLayout>